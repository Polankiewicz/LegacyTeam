;je¿eli w gracz info znajdziemy gracza po asercji, co ma równo pincet woja to daje znaæ o tym

(deffact gracze
	(assert (graczInfo (coordX 5) (coordY 6) (czyAI no) (iloscWoja 500)))
	(assert (graczInfo (coordX 4) (coordY 8) (czyAI no) (iloscWoja 300)))
	(assert (graczInfo (coordX 2) (coordY 2) (czyAI no) (iloscWoja 400)))
	(assert (graczInfo (coordX 8) (coordY 4) (czyAI no) (iloscWoja 800)))
)

(defrule isOkay
	(graczInfo(iloscWoja ?a&:(> ?a 400)))
	=>
	(assert (konkluzja(tekst "znaleziono")))
)

(defrule worry-about-thin-people
	(personal-data (name ?name) (weight ?weight))
	(test (< ?weight 80))
=>
	(printout t ?name " is looking a bit thin." crlf)
)